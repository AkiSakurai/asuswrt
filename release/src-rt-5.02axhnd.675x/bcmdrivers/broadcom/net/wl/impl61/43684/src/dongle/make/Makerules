ifeq ($(GENROMTBL),1)
	ROMTBLSCRIPT	:= $(DNGL_BLD_SCRIPT_DIR)/gen-romtbl
	ROMTBLSYM	?= romtable_full.S
	LDMAPCREF	:= .ldmap.cref
	LDFLAGS		+= --cref -Map $(LDMAPCREF)
